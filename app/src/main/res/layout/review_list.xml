<?xml version="1.0" encoding="utf-8"?><!--TODO add a horizontal divider line above the first list element-->
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingTop="1dip"
    android:paddingBottom="1dip"
    android:paddingStart="8dip"
    android:paddingEnd="8dip"
    android:descendantFocusability="blocksDescendants">


    <TextView
        android:id="@+id/textReview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:attr/textAppearanceListItemSmall"
        android:paddingStart="?android:attr/listPreferredItemPaddingStart"
        android:paddingEnd="?android:attr/listPreferredItemPaddingEnd"
        android:minHeight="?android:attr/listPreferredItemHeightSmall"
        android:gravity="center_vertical"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <ImageView

        android:id="@+id/firstStar"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_below="@+id/textReview"
        android:layout_centerVertical="true" />

    <ImageView

        android:id="@+id/secondStar"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_below="@+id/textReview"
        android:layout_marginStart="25dp"
        android:layout_centerVertical="true" />

    <ImageView

        android:id="@+id/thirdStar"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_below="@+id/textReview"
        android:layout_marginStart="50dp"
        android:layout_centerVertical="true" />

    <ImageView


        android:id="@+id/fourthStar"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginStart="75dp"
        android:layout_below="@+id/textReview"
        android:layout_centerVertical="true" />

    <ImageView

        android:id="@+id/fifthStar"
        android:layout_width="24dip"
        android:layout_height="24dip"
        android:layout_marginStart="100dp"
        android:layout_below="@+id/textReview"
        android:layout_centerVertical="true" />


</RelativeLayout><!--
