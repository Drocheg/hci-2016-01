<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true"
    tools:openDrawer="start">

    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/drawer_header_flights"
        app:menu="@menu/flights_activity_drawer" />

    <include
        layout="@layout/app_bar_search"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:padding="15dp"
        tools:context="hci.itba.edu.ar.tpe2.SearchActivity">

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/from"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:layout_marginTop="50dp"
            android:inputType="text"
            android:hint="From"
            android:text="JFK" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/to"
            android:layout_alignTop="@+id/from"
            android:layout_alignParentEnd="true"
            android:inputType="text"
            android:hint="To"
            android:text="LAX" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:inputType="date"
            android:ems="10"
            android:id="@+id/dep_date"
            android:layout_below="@+id/from"
            android:layout_alignStart="@+id/from"
            android:layout_marginTop="30dp"
            android:hint="Departure date"
            android:text="2016-10-03" />

        <EditText
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:id="@+id/airline"
            android:layout_alignTop="@+id/dep_date"
            android:layout_alignEnd="@+id/to"
            android:inputType="text"
            android:hint="Airline (optional)" />

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Search"
            android:id="@+id/search_button"
            android:layout_below="@+id/dep_date"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp" />
    </RelativeLayout>
</android.support.v4.widget.DrawerLayout>